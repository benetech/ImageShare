{% extends "base.twig" %}

{% set page_title = post.title %}

{% block content %}
  <div class="main-inner grid" id="collection">
    <div class="width-9/12">
      <h1 id="main-heading" class="h1">
        {{ post.title | i18n | e }}
      </h1>
      <p class="description">
        {{ 'created by' | i18n }} {{ post.contributor | i18n | e }}
      </p>

      <section class="search-results">
        <h2 resource-section>{{ 'Resources' | i18n }} <span class="counter">{{ post.resources | length }}</span></h2>
        {{ include('partial/resource-table.twig', {results: post.resources}, with_context = false) }}
      </section>

    </div>
  </div>
{% endblock %}

